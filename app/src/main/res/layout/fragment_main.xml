<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:fitsSystemWindows="false"
    android:orientation="vertical"
    tools:context="com.example.mi.coordinatorlayoutdemo.MainActivity">

    <LinearLayout
        android:id="@+id/topsite"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/topsite"
        android:orientation="horizontal"
        app:layout_behavior="com.example.mi.coordinatorlayoutdemo.HeaderTopSiteBehavior" />

    <ImageView
        android:id="@+id/scrolling_header"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/custom_head_card_spring_bg"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:id="@+id/edit_search"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_behavior="com.example.mi.coordinatorlayoutdemo.HeaderFloatBehavior">

        <TextView
            android:id="@+id/tv_click_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:gravity="center_vertical"
            android:text="搜索关键字"
            android:textColor="#90000000" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        app:layout_behavior="com.example.mi.coordinatorlayoutdemo.HeaderScrollingBehavior" />

</android.support.design.widget.CoordinatorLayout>
